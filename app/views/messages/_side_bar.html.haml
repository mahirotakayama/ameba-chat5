.side-bar
  .header
    %h3.header__name
      = current_user.name
    %ul.header__lists
      %li.list
        = link_to "#" do
          = icon('fas', 'edit', class: 'icon')
      %li.list
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        .group__name 
          = group.name
        .group__message
          新着メッセージ
      .group
        .group__name
          グループ名
        .group__message
          新着メッセージ
        